@model IEnumerable<Boutiq_api.Models.Boutiq>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card {
        background-color: rgb(235, 179, 188);
    }

    .bulooka {
        display: flex;
    }

    .rowtwo {
        margin-top: 5%;
    }

    img {
        margin-top: 5%;
        margin-left: 5%;
    }

    h1 {
        text-align: center;
        color: blue;
    }

    .ratings {
        background-color: aliceblue;
        color: blue;
        font-weight: bold;
        font-size: larger;
        text-align: center;
    }
</style>
<h1> The tops we have in store </h1>
<div class="ratings">
    <p>  Total Number of Tops in shop: @ViewBag.topsInStore </p>
    <p> Current Tops worth: Ushs.@Model.Sum(i => i.Cost)</p>

</div>


<div class="row">
    @foreach (var employee in Model)
    {


        <div class="card col-md-4">

            <img src="~/images/@employee.itemImage" height="70%" width="90%">
            <p class="rowtwo">
                <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@employee.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
            </p>
        </div>
        @* </div> *@
    }
</div>
