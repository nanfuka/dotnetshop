@model Boutiq_api.Models.Boutiq
@{
    ViewData["Title"] = "Edit";
}
<style>
img{
    max-width: 80%;
}
</style>



<h1>Edit the Boutiq Item</h1>

<div>
    <a asp-action="GetCurrentStalk">Back to List</a>
</div>
<hr />
<div class="row">
    @* <div class="col-md-4"> *@
        <form  enctype="multipart/form-data" method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" />

            <div class = "row">
                <div class = "col-md-6">
            <img src="~/images/@Html.DisplayFor(model => model.itemImage)"/>

                </div>
                <div class = "col-md-6">
                    <div class = "row">
                        <div class = "col-md-6">
                                                        <div class="form-group">
                            <label asp-for="Type" class="control-label"></label>
